body,html,main
    height: 100%
    width: 100%
    font-family: "source sans 3"

body
    margin: 0

main
    display: flex
    flex-direction: row

h1
    font-size: 19px
    font-weight: 500
    margin: 0
    color: #545454

p
    margin: 0

.input-zone
    flex: 2.7
    padding: 10px 15px
    display: flex
    flex-direction: column
    min-width: 400px

    .info-box
        padding: 15px 0

    .inner-input-zone
        flex: 1
        display: flex
        flex-direction: column
        padding-bottom: 15px

        h1
            padding-bottom: 10px

        textarea.input-textarea
            width: 100%
            height: 400px
            box-sizing: border-box
            font-size: 18px
            font-family: "source code pro"
            resize: none
            flex: 1

.output-zone
    flex: 1
    min-width: 350px
    padding: 10px 0
    box-sizing: border-box

    .output-box
        border-left: 3px solid #545454
        padding: 0 10px
        margin-bottom: 12px

        .output-string
            padding: 5px 0
            font-size: 15px

        .copied-indicator
            font-size: 12px
            color: #6ccf96
            margin-top: 3px
            margin-left: 4px

.button1
    padding: 10px 10px
    border: 1px solid #adadad
    border-radius: 10px
    display: flex
    justify-content: center
    font-weight: 600
    background: #e7e7e7
    color: #313131
    cursor: pointer
    user-select: none

    &:hover
        background: #f4f4f4
        border-color: #dedede

    &:active
        background: #dedede