body,html,main
    height: 100%
    width: 100%
    font-family: "source sans 3"

body
    margin: 0

main
    display: flex
    flex-direction: row

h1
    font-size: 19px
    font-weight: 500
    margin: 0
    color: #545454

p
    margin: 0

.input-zone
    flex: 2.7
    padding: 10px 15px
    display: flex
    flex-direction: column
    min-width: 400px

    .info-box
        padding: 15px 0

    .inner-input-zone
        flex: 1
        display: flex
        flex-direction: column
        padding-bottom: 15px

        h1
            padding-bottom: 10px

        textarea.input-textarea
            width: 100%
            height: 400px
            box-sizing: border-box
            font-size: 18px
            font-family: "source code pro"
            resize: none
            flex: 1

.output-zone
    flex: 1
    min-width: 350px
    padding: 10px 0
    box-sizing: border-box